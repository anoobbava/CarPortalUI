<h1 align="center">Reviews</h1>

<table align="center">
  <tr>
    <th>Title</th>
    <th></th><th></th><th></th><th></th>
    <th>Comments</th>
    <th colspan = "2"></th>
  </tr>
 
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.title %></td>
      <td></td><td></td><td></td><td></td>
      <td><%= review.comments %></td>
      <td></td><td></td><td></td><td></td>
       <td><%= link_to 'Show', review_path(review) %></td>
       <td></td><td></td><td></td><td></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td></td><td></td><td></td><td></td>
      <td><%= link_to 'Destroy', review_path(review),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    
  <% end %>
  <tr></tr><tr></tr><tr></tr>
  <tr>
    <td></td><td></td><td></td><td></td>
    <td> <%= link_to 'New Review', new_review_path %></td>
    <tr>
</table>

